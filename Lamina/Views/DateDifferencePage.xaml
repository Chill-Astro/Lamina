<Page
    x:Class="Lamina.Views.DateDifferencePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid Background="Transparent">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" Spacing="10">
            <TextBlock Text="Select Start Date:" Style="{StaticResource BaseTextBlockStyle}" HorizontalAlignment="Center"/>
            <DatePicker x:Name="StartDatePicker" Width="300" HorizontalAlignment="Center"/>
            <TextBlock Height="1" FontSize="1"/>
            <TextBlock Text="Select End Date:" Style="{StaticResource BaseTextBlockStyle}" HorizontalAlignment="Center"/>
            <DatePicker x:Name="EndDatePicker" Width="300" HorizontalAlignment="Center"/>
            <TextBlock Height="1" FontSize="1"/>
            <Button Content="Calculate"
                    Click="CalculateButton_Click"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,0"
                    Style="{StaticResource AccentButtonStyle}" />
            <TextBlock x:Name="ResultTextBlock" IsTextSelectionEnabled="True" Text="OUTPUT AREA" FontWeight="SemiBold" FontSize="12" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Page>