<Page
    x:Class="Lamina.Views.ShellPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Lamina.Behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="using:Lamina.Helpers"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{x:Null}"
    Loaded="OnLoaded"
    mc:Ignorable="d">
    <Page.Transitions>
        <TransitionCollection>
            <EntranceThemeTransition />
        </TransitionCollection>
    </Page.Transitions>
    <Page.Resources>
        <FontFamily x:Key="icomoonFontFamily">ms-appx:///Assets/Fonts/icomoon.ttf#IcoMoon</FontFamily>
    </Page.Resources>
    <Grid Background="Transparent">
        <Grid
            x:Name="AppTitleBar"
            Height="{Binding ElementName=NavigationViewControl, Path=CompactPaneLength}"
            VerticalAlignment="Top"
            Canvas.ZIndex="1"
            IsHitTestVisible="True">
            <Image
                Width="16"
                Height="16"
                HorizontalAlignment="Left"
                Source="/Assets/WindowIcon.ico" />
            <TextBlock
                x:Name="AppTitleBarText"
                Margin="28,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                TextWrapping="NoWrap" />
        </Grid>
        <NavigationView
            x:Name="NavigationViewControl"
            Canvas.ZIndex="0"
            DisplayModeChanged="NavigationViewControl_DisplayModeChanged"
            ExpandedModeThresholdWidth="600"
            Header="{x:Null}"
            IsBackButtonVisible="Auto"
            IsBackEnabled="{x:Bind ViewModel.IsBackEnabled, Mode=OneWay}"
            IsSettingsVisible="True"
            OpenPaneLength="280"
            SelectedItem="{x:Bind ViewModel.Selected, Mode=OneWay}">
            <NavigationView.Background>
                <AcrylicBrush
                    FallbackColor="{ThemeResource SystemChromeLowColor}"
                    Opacity="0.0"
                    TintColor="{ThemeResource SystemChromeLowColor}" />
            </NavigationView.Background>
            <NavigationView.MenuItems>
                <NavigationViewItem x:Uid="Shell_Calculator" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.CalculatorViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe900;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemHeader Content="Converters" />
                <NavigationViewItem x:Uid="Shell_UnitConverter" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.UnitConverterViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe917;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Currency" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.CurrencyViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe90e;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_BaseConverter" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.BaseConverterViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe918;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemHeader Content="Mensuration" />
                <NavigationViewItem x:Uid="Shell_HF" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.HFViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe901;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Perimeter" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.PerimeterViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe909;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Area" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.AreaViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe906;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Volume" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.VolumeViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe907;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_SurfaceArea" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.SurfaceAreaViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe908;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_CSurfaceArea" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.CSurfaceAreaViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe913;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Diagonal" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.DiagonalViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe910;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemHeader Content="Algebra" />
                <NavigationViewItem x:Uid="Shell_QuadEqn" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.QuadEqnViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe919;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemHeader Content="Finance" />
                <NavigationViewItem x:Uid="Shell_SI" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.SIViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe902;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_CI" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.CIViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe903;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Dicount" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.DicountViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe915;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItemHeader Content="Extras" />
                <NavigationViewItem x:Uid="Shell_AgeCalc" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.AgeCalcViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe912;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_DateDifference" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.DateDifferenceViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe916;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Factorial" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.FactorialViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe904;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_Approx" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.ApproxViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe905;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_PrimeCheck" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.PrimeCheckViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe911;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem x:Uid="Shell_RTCheck" helpers:NavigationHelper.NavigateTo="Lamina.ViewModels.RTCheckViewModel">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="{StaticResource icomoonFontFamily}" Glyph="&#xe914;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <i:Interaction.Behaviors>
                <behaviors:NavigationViewHeaderBehavior DefaultHeader="{x:Bind ((ContentControl)ViewModel.Selected).Content, Mode=OneWay}">
                    <behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                        <DataTemplate>
                            <Grid />
                        </DataTemplate>
                    </behaviors:NavigationViewHeaderBehavior.DefaultHeaderTemplate>
                </behaviors:NavigationViewHeaderBehavior>
            </i:Interaction.Behaviors>
            <Grid Margin="5">
                <Frame x:Name="NavigationFrame" />
            </Grid>
        </NavigationView>
    </Grid>
</Page>
